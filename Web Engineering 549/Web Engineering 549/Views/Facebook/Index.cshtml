@{
    ViewBag.Title = "Facebook Portal";
}

@model Web_Engineering_549.Models.Images

@{
    ViewBag.Title = "FacebookView";
}

<script src='http://connect.facebook.net/en_US/all.js' type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Facebook/updateStatus.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Facebook/sendMessage.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Facebook/uploadPhoto.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Facebook/addFriend.js")" type="text/javascript"></script>

<div id='fb-root'></div>
<div style="margin:25px;">
    <div style="float:left; padding-right:25px">
         <h2>Facebook Actions</h2>
         <p>
            <a class="btn btn-primary btn-large" onclick='postToFeed(); return false;'>Update your
                Facebook status</a></p>
        <p>
            <a class="btn btn-primary btn-large" onclick='send(); return false;'>Send a Facebook
                Message</a>&nbsp&nbsp URL<input id="linkBox" class="span2" type="text" placeholder="URL" /><text id="linkError"></text>
        </p>
        <p>
            <a class="btn btn-primary btn-large" onclick='addFriend(); return false;'>Add a friend</a>&nbsp&nbsp
            Friend ID<input id="idBox" class="span2" type="text" placeholder="ID" /><text id="idError"></text>
        </p>
    </div>
    <div style="float:left">
      <h2>Upload Photo to Facebook</h2>
      @Html.Partial("~/Views/Facebook/PhotoUploadForm.cshtml", Model)
    </div>
</div>
