@{
    ViewBag.Title = "StocksOwned";
}


<script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js" type="text/javascript"></script>
<link href="@Url.Content("~/CSS/stocks.css")" type="text/css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/Stocks/transactions.js")"></script>


<div class="hero-unit">

<div class="stockDiv">
        <a href="Stocks" class="viewStocksLink">Search Stocks</a> 
        |
        <a href="Transactions" class="viewStocksLink">View All Transactions</a> 
</div>
<br />  

<div id="transactionsHeader">
    <h2>My Stocks</h2>    
</div>
<div id="stockTransactionsDiv"><h3 id="stockLoadingMessage">Loading Stocks ... </h3></div>
<script type="text/javascript">
    $(document).ready(function () {
        loadMyStocks();
    });
</script>

<div id="stockTrans" title="Set Up Your Transaction">
       <p class="validateTips" style="display:none">All form fields are required.</p>
        <form id="buyStockForm" style="display:none">
            <fieldset>
                <label for="nameOfStock">Stock Name</label>
                <input type="text" name="nameOfStock" id="nameOfStock" class="text ui-widget-content ui-corner-all" />
                <label for="ticker">Stock Symbol</label>
                <input type="text" name="ticker" id="ticker" class="text ui-widget-content ui-corner-all"/>
                <label for="stockPrice">Stock Price</label>
                <input type="text" name="stockPrice" id="stockPrice" class="text ui-widget-content ui-corner-all" />
                <label for="quantityToBuy">Quantity</label>
                <input type="text" name="quantity" id="quantityToBuy" class="text ui-widget-content ui-corner-all" />
            </fieldset>
        </form>
    </div>

</div>
